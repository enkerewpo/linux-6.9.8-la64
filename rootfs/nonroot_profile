export PATH="/bin:/sbin:/usr/bin:/usr/sbin"

if [ "$PS1" ]; then
	if [ "`id -u`" -eq 0 ]; then
		export PS1='[\u@\h \W]# '
	else
		export PS1='$ '
	fi
fi

export EDITOR='/bin/vi'

ls -R /dev

echo "HELLO FROM NONROOT VIRTIO DRIVER!" > /dev/vport0p0
echo "HELLO FROM NONROOT VIRTIO DRIVER!" > /dev/hvc0
poweroff